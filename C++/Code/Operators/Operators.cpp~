#include<iostream>
#include<string>
#include<vector>
#include<algorithm>
#include<cmath>
using namespace std;

int main() 
{
    cout << "Please enter a flaoting-point number: \n";
    double n;
    cin >> n;
    cout << "n == " << n << endl;
    cout << "n+1 == " << n+1 << endl;
    cout << "three times n == " << 3*n << endl;
    cout << "twice n == " << n+n << endl;
    cout << "n squared == " << n*n << endl;
    cout << "half of n == " << n/2 << endl;
    cout << "square root of n ==" << sqrt(n) << endl;
    return 0;
}

